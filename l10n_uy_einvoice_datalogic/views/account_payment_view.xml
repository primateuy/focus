<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cfe_resguardo_biller_account_move_inh_form_view" model="ir.ui.view" >
            <field name="name">cfe.resguardo.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="move_type" invisible="1"/>
                    <button name="facturar"
                            type="object"
                            class="oe_highlight"
                            string="Facturar"
                            attrs="{'invisible':[('move_type', 'in', ('entry', 'in_invoice', 'in_refund', 'in_receipt'))]}"
                    />
                    <button name="obtener_pdf"
                            type="object"
                            class="oe_highlight"
                            string="Obtener PDF"
                            attrs="{'invisible':[('move_type', 'in', ('entry', 'in_invoice', 'in_refund', 'in_receipt'))]}"

                    />
                </xpath>
                <div name="button_box" position="inside">
                    <field name="cfe_emitido" invisible="1"/>
                    <button class="oe_inline oe_stat_button"
                            type="object"
                            name="obtener_pdf"
                            attrs="{'invisible': [('cfe_emitido', '=', False)]}"
                            icon="fa-file"
                            string="Obtener PDF">
                    </button>
                    <button class="oe_inline oe_stat_button"
                            type="object"
                            name="estado_cfe"
                            attrs="{'invisible': [('cfe_emitido', '=', False)]}"
                            icon="fa-wifi"
                            string="Estado CFE">
                    </button>
                    <!--                <button name="recibidos" type="object" class="oe_highlight" string="Obtener recibidos" invisible="1"/>-->
                </div>
            </field>
        </record>

        <record id="cfe_resguardo_biller_fields_account_move_inh_form_view" model="ir.ui.view" >
            <field name="name">cfe.resguardo.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="l10n_uy_einvoice_base.cfe_resguardo_account_move_inh_form_view"/>
            <field name="arch" type="xml">
                <field name="cfe_type" position="after">
                    <field name="cfe_id" invisible="0"/>
                </field>
            </field>

        </record>



    </data>
</odoo>
